{
    "analyzers": {
        "core": {
            "verbose": true,
            "enabled": true,
            "rules": {
                "no-hardcoded-env-urls": {
                    "level": "warning"
                    //"disallowedhosts": ["management.core.windows.net", "management.azure.com", "database.windows.net", "core.windows.net"],
                    //"excludedhosts": ["schema.management.azure.com"]
                },
                "no-unused-params": {
                   "level": "error"
                },
                 "no-unused-vars": {
                    "level": "error"
                },
                "prefer-interpolation": {
                  "level": "warning"
                },
                "secure-parameter-default": {
                    "level": "error"
                },
                "simplify-interpolation": {
                    "level": "warning"
                }
            }
        }
    }
}